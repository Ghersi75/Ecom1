{
  "compilerOptions": {
    "baseUrl": "./src", // Add the baseUrl here to point to the root of your source directory
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "Components/*": ["Components/*"], // Remove the leading "./src/" from paths
      "Pages/*": ["Pages/*"],
      "Utils/*": ["Utils/*"],
      "Types/*": ["Utils/Types/*"]
    } 
  },
  "include": [
    "src"
  ]
}
